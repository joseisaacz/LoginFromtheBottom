<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TableLayout
    android:id="@+id/simpleTableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"> <!-- stretch the second column of the layout-->

    <!-- first row of the table layout-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:background="#3F51B5"
                app:srcCompat="?attr/actionModePasteDrawable" />

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="JOB APPLICATION"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="3dp"
                    android:text="Please complete the form below to apply for a position with us"
                    android:textSize="10dp" />

            </RelativeLayout>
        </TableRow>

        <TableRow

            android:id="@+id/secondRow"
            android:layout_width="400dp"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/FullNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14dip"
                android:text="Full Name"
                android:textColor="#000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/fisrtName"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textSize="10sp"
                        android:hint="First Name"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/lastName"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textSize="10sp"
                        android:hint="Last Name"/>
                </LinearLayout>
            </LinearLayout>


        </TableRow>

        <TableRow

            android:id="@+id/thirdRow"
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/AddressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14dip"
                android:text="Current Address"
                android:textColor="#000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/address1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textSize="10sp"
                        android:hint="Street Address"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/address2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textSize="10sp"
                        android:hint="Street Address line II"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/City"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textSize="9sp"
                            android:hint="City"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/StateOProvince"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textSize="9sp"
                            android:hint="State/Province"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/postalCode"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:textSize="9sp"
                            android:hint="Postal Code"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/Country"
                            android:layout_width="90dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </TableRow>

        <TableRow

            android:id="@+id/ThridRow"
            android:layout_width="400dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dip"
                    android:text="Email Address"
                    android:textColor="#000"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:inputType="textWebEmailAddress"
                    android:hint="ex: name@email.com"
                    android:textSize="9sp"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>


        </TableRow>

        <TableRow
            android:id="@+id/forthRow"
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phoneLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dip"
                    android:text="Phone Number"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/areaCode"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Area Code"
                        android:textSize="9sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Phone"
                        android:textSize="9sp"/>
                </LinearLayout>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/fifthRow"
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:padding="14dip"
                    android:text="Applying for Position"
                    android:textColor="#000"
                    android:textSize="14sp"></TextView>

                <Spinner
                    android:id="@+id/applyingJob"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/sixthRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dip"
                    android:text="Start Date"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/Fecha"
                    android:layout_width="150dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="35dp"
                    android:focusable="false"
                    android:hint="Select a Date"
                    android:textColor="#000"
                    android:textSize="9sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/seventhRow"
            android:layout_width="400dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/ResumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14dip"
                android:text="Upload Resume"
                android:textColor="#000" />

                <ImageButton
                    android:id="@+id/uploadFile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#3F51B5"
                    app:srcCompat="@android:drawable/ic_menu_upload" />
                <TextView
                    android:id="@+id/fileName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="file name"
                    android:textSize="10sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </TableRow>



        <TableRow
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">
                <ImageButton
                    android:id="@+id/save"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@android:drawable/ic_menu_save"
                    android:background="#3F51B5"/>
                <ImageButton
                    android:id="@+id/cancel_action"
                    android:layout_width="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_row_background_delete"
                    app:srcCompat="@android:drawable/ic_delete"
                    android:hint="Cancel"/>
            </LinearLayout>
        </TableRow>
    </LinearLayout>
</TableLayout>
</ScrollView>